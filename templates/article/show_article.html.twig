{% extends 'base.html.twig' %}
{% block title%} show article {% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class=\"table\">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>data de publication</th>
                {{ article.dateDePublication | date('d/m/Y') }}
            </tr>

        </tbody>
    </table>

{% endblock %}